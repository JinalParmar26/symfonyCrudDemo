{{ form_start(form) }}
	<div class="form-group row">
		<div class="col-sm-2 col-form-label">
		   		{{ form_label(form.productName) }}
		</div>
		<div class="col-sm-4">
		   {{ form_widget(form.productName, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="my-custom-class-for-errors row">
			{{ form_errors(form.productName) }}
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-2 col-form-label">
		   		{{ form_label(form.productDescription) }}
		</div>
		<div class="col-sm-4">
		   {{ form_widget(form.productDescription, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="my-custom-class-for-errors row">
			{{ form_errors(form.productDescription) }}
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-2 col-form-label">
		   		{{ form_label(form.productImage) }}
		</div>
		<div class="col-sm-4">
		   {{ form_widget(form.productImage, {'attr': {'class': 'form-control12'}}) }}
		</div>
		<div class="my-custom-class-for-errors row">
			{{ form_errors(form.productImage) }}
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-2 col-form-label">
		   		{{ form_label(form.productPrice) }}
		</div>
		<div class="col-sm-4">
		   {{ form_widget(form.productPrice, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="my-custom-class-for-errors row">		
		{{ form_errors(form.productPrice) }}
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-4">
		<button class="btn btn-primary mb-2">{{ button_label|default('Save') }}</button>
	</div>
	</div>		
{{ form_end(form) }}
<style>
.my-custom-class-for-errors{color:red}
</style>